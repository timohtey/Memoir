<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/routeNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:ems="10"
            android:hint="Route Name"
            android:inputType="text"
            android:textSize="20sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/routeDescTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:hint="Description"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.91" >

        <GridLayout
            android:id="@+id/gridLayoutImage"
            android:layout_width="match_parent"
            android:layout_height="371dp"
            android:layout_weight="0.90"
            android:columnCount="4"
            android:rowCount="4"
            android:scrollbars="vertical" >
        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/addLandmarkBtn"
                android:layout_width="142dp"
                android:layout_height="74dp"
                android:layout_weight="0.58"
                android:text="Add Landmark Image" />

            <Button
                android:id="@+id/saveRouteBtn"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:layout_weight="0.49"
                android:text="Save Route" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>