<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9b59b6"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/goodJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="40sp"
        android:text="Good Job!"
        android:textColor="#ffff"
        android:textSize="100sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="30sp"
            android:fontFamily="sans-serif-light"
            android:text="Accuracy:"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/accuracyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="30sp"
            android:text="TextView"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="20sp"
            android:fontFamily="sans-serif-light"
            android:text="Words guessed per minute:"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/wordsGuessedpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:fontFamily="sans-serif-light"
            android:text="0"
            android:textColor="#ffff"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/playAgain"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="100sp"
        android:background="@drawable/container_dropshadow"
        android:text="Play Again"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/exitToMainMenu"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20sp"
        android:background="@drawable/container_dropshadow2"
        android:text="Exit to Main Menu"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>
